@model Template.Model.LoginModel
@{
    Layout = "~/Views/shared/_LayoutOut.cshtml";
    ViewBag.Title = "Log in";
}
<div>
    <div class="login_wrapper">
        <section id="loginForm" class="login_content">
            @using (Html.BeginForm("Index", "Login", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "animate form login_form", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h1>Login Form</h1>

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div>

                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })

                </div>

                <div>
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>
                <div>
                    <input type="submit" value="Log in" class="btn btn-default" />
                    <div class="checkbox">
                        @Html.CheckBoxFor(m => m.RememberMe)
                        @Html.LabelFor(m => m.RememberMe)
                    </div>
                </div>
                <div class="clearfix"></div>
            }
        </section>
    </div>
</div>






