@model IEnumerable<Template.Model.ViewModels.RoleViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/shared/_Layout.cshtml";
}

<div class="page-title">
    <div class="title_left">
        <h3>Roles List</h3>
    </div>
</div>

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_content">
                <table id="doctors" class="data table table-striped no-margin">
                    <thead>
                        <tr>
                            <th> Name </th>
                            <th><a href="@Url.Action("Create","Roles")" class="btn btn-success btn-xs"><i class="fa fa-edit"></i>Add</a></th>
                            <th></th>
                        </tr>
                    </thead>
                    @foreach (var item in Model)
                    {
                <tr>
                    <td> @item.Name </td>
                    <td>
                        @Html.ActionLink("Users", "UserRoles", new { id = item.Name },new {@class="btn btn-primary btn-xs" }) 
                    </td>
                </tr>
                    }
                </table>
                <br />
            </div>
        </div>
    </div>


</div>
